{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-eval": "error",
    "no-console": "warn",
    "no-unused-vars": ["warn", { "args": "none", "varsIgnorePattern": "^goodTube_" }],
    "prefer-const": "warn",
    "eqeqeq": ["warn", "always"],
    "no-inner-declarations": "off",
    "no-restricted-globals": ["error", "event"]
  }
}
